=render :partial => "admin/admin_header"
%h2 Blogs
=link_to "Add", new_post_path

%table.entries
  %thead
    %tr{:align => "left"}
      %th Title
      %th Date Posted
      %th
      %th
  %tbody
    - @posts.each do |post|
      %tr
        %td= post.title
        %td= post.date_to_string
        %td= link_to "Edit", edit_post_path(post)
        %td= link_to "Delete", post_path(post), :confirm => 'Are you sure you want to delete this post?', :method => 'delete'
