=render :partial => 'home/site_header'

%section{:id => "blog"}
  %h2 #my_blog_index

  - @posts.each do |post|
    %article{:id => "blog_#{post.id}", :class => "blogs"}
      %header
        %h3
          =link_to post.title, post_path(post)
      %p= post.body
      %footer= post.created_at.strftime("%d-%m-%Y")

=render :partial => 'home/site_sidebar'
=render :partial => 'home/site_footer'
