!!!
%html{:dir => "ltr", :lang => "en-US"}
  %head
    %meta{:charset => "utf-8"}
    /[if lt IE 9]
      <script type="text/javascript">
      document.createElement("nav" );
      document.createElement("header" );
      document.createElement("footer" );
      document.createElement("section" );
      document.createElement("article" );
      </script>
    %title
      = page_title
    %meta{:name => "description", :content => "Edmore Moyo Personal website and blog, Ruby, Javascript, Scheme, Erlang Developer"}
    %meta{:name => "keywords", :content => "edmore moyo, ruby, rails, TDD, BDD, cape town, south africa"}
    %meta{:name => "viewport", :content => "initial-scale=1.0, width=device-width"}
    = stylesheet_link_tag "style", "formtastic", "formtastic_changes", "jquery.tweet"
    = favicon_link_tag
    = javascript_include_tag :defaults
    = javascript_include_tag "jquery.tweet.js"
    = csrf_meta_tag
    = javascript_include_tag "ga.js"
    <script type="text/x-mathjax-config">MathJax.Hub.Config({ tex2jax: {inlineMath: [['$','$'], ['\\(','\\)']]} });</script>
    <script type="text/javascript" src="https://c328740.ssl.cf1.rackcdn.com/mathjax/latest/MathJax.js?config=TeX-AMS-MML_HTMLorMML"></script>
  %body
    = yield
